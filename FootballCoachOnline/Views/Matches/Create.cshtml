@model FootballCoachOnline.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        <input type="hidden" asp-for="CompetitionId" class="form-control" asp-items="ViewBag.CompetitionId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Team1Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Team1Id" class ="form-control" asp-items="ViewBag.Team1Id"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Team2Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Team2Id" class ="form-control" asp-items="ViewBag.Team2Id"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
