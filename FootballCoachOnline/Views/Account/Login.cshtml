@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Prijava";
}

<head>
    <link rel="stylesheet" href="~/css/registration.css" />
</head>

<div class="row main">
    <div class="main-login main-center">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h2 class="text-center">Prijava</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Username" class="cols-sm-2 control-label">Korisničko ime</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Unesite korisničko ime" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="cols-sm-2 control-label">Lozinka</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Unesite lozinku" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            Zapamti me?
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Prijavite se</button>
            </div>
            <div class="login-register">
                <a asp-action="Register">Nemate korisnički račun? Registrirajte se</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
