@model IEnumerable<FootballCoachOnline.Models.Competition>

@{
    ViewData["Title"] = "Natjecanja";
}

<h2>Natjecanja</h2>

<p>
    <a asp-action="Create">Dodaj novo natjecanje</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obri≈°i</a>
            </td>
        </tr>
}
    </tbody>
</table>
